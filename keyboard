<html>
<head>
    <title>giri</title>
</head>    
<body>
    <button id="sj">1</button>
</body>
<script>
 let btn= document.getElementById('sj');
 document.addEventListener('keydown',(event)=>{
  console.log(event.key);
  switch(event.key){
    case 'ArrowUp':
        btn.textContent=Number(btn.textContent)+1;
        break;
        case 'ArrowDown':
            btn.textContent =Number(btn.textContent)-1;
            break;
  }
 });




 </script>
 </html>
